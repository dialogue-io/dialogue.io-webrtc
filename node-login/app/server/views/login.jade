script(type='text/javascript')
        mixpanel.track('New visit', {'page name' : document.title, 'url' : window.location.pathname});
        mixpanel.track_pageview("/login.html");
#login-container
        form( method="post")#login-form.well.span4
            input(type='hidden', name='_csrf', value=token)
            h1 Hello!
            p.subheading Please Login To Your Account
            label Username 
            input(type="text", name="user", id='user-tf').span4.required
            label Password
            input(type="password", name="pass", id='pass-tf').span4.required
            button(type="submit")#btn-login.btn.btn-primary
                i.icon-lock.icon-white
                | Sign in
            label#remember-me.checkbox Remember Me
                input(type="checkbox", checked='checked')
            div.clear-fix
            hr
            div.btm-links
                a(href='#')#forgot-password Forgot Your Password? 
                a(href='/signup')#create-account Create An Account
        div.pagination-centered
                p.lead(style='font-size: 14px;')
                        | Hey! This is experimental, 
                        a(href='https://tools.google.com/dlpage/chromesxs/', target='_blank') Chrome Canary 
                        | highly required.
        div.pagination-centered
                a(href='https://mixpanel.com/f/partner')
                    img(src='//cdn.mxpnl.com/site_media/images/partner/badge_light.png', alt='Mobile Analytics')

    
include modals/alert
include modals/lost-password

